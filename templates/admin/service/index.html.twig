{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Services{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">üè• Gestion des Services</h1>
        <a href="{{ path('admin_service_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau service
        </a>
    </div>

    {% if services is empty %}
        <div class="alert alert-info text-center">
            Aucun service cr√©√© pour le moment.
            <a href="{{ path('admin_service_new') }}" class="alert-link">Cr√©er le premier service</a>
        </div>
    {% else %}
        <div class="row g-4">
            {% for service in services %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm {% if not service.actif %}border-secondary{% endif %}">
                        <div class="card-header {% if service.actif %}bg-success text-white{% else %}bg-secondary text-white{% endif %}">
                            <div class="d-flex justify-content-between align-items-center">
                            <span>
                                {% if service.actif %}
                                    <i class="bi bi-check-circle"></i> Actif
                                {% else %}
                                    <i class="bi bi-x-circle"></i> Inactif
                                {% endif %}
                            </span>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">{{ service.nom }}</h5>
                            <p class="card-text text-muted flex-grow-1">
                                {{ service.description|length > 100 ? service.description|slice(0, 100) ~ '...' : service.description }}
                            </p>

                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">‚è±Ô∏è Dur√©e:</span>
                                    <strong>{{ service.duree }} min</strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">üí∞ Prix:</span>
                                    <strong class="text-success">{{ service.prix }} TND</strong>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <a href="{{ path('admin_service_show', {id: service.id}) }}"
                                   class="btn btn-primary">
                                    <i class="bi bi-eye"></i> D√©tails
                                </a>
                                <div class="btn-group">
                                    <a href="{{ path('admin_service_edit', {id: service.id}) }}"
                                       class="btn btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                    <a href="{{ path('admin_service_toggle', {id: service.id}) }}"
                                       class="btn btn-outline-{{ service.actif ? 'warning' : 'success' }}">
                                        <i class="bi bi-{{ service.actif ? 'pause' : 'play' }}-circle"></i>
                                        {{ service.actif ? 'D√©sactiver' : 'Activer' }}
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            <small>Cr√©√© le {{ service.createdAt|date('d/m/Y') }}</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
