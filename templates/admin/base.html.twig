<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Administration - MediPlus{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    {% block stylesheets %}
        <style>
            .sidebar {
                min-height: 100vh;
                background: linear-gradient(180deg, #0d6efd 0%, #0a58ca 100%);
            }
            .sidebar .nav-link {
                color: rgba(255,255,255,0.8);
                padding: 0.8rem 1rem;
                border-radius: 0.5rem;
                margin-bottom: 0.2rem;
                transition: all 0.3s;
            }
            .sidebar .nav-link:hover,
            .sidebar .nav-link.active {
                color: white;
                background: rgba(255,255,255,0.1);
            }
            .sidebar .nav-link i {
                margin-right: 0.5rem;
                width: 20px;
            }
            .stat-card {
                border-left: 4px solid;
                transition: transform 0.2s;
            }
            .stat-card:hover {
                transform: translateY(-5px);
            }
        </style>
    {% endblock %}
</head>
<body class="bg-light">
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-md-block sidebar p-3">
            <div class="text-center mb-4 mt-2">
                <h4 class="text-white mb-0">üè• MediPlus</h4>
                <small class="text-white-50">Administration</small>
            </div>

            <div class="mb-4 p-3 bg-white bg-opacity-10 rounded">
                <div class="text-white text-center">
                    <i class="bi bi-person-circle fs-1"></i>
                    <p class="mb-0 mt-2"><strong>{{ app.user.prenom }} {{ app.user.nom }}</strong></p>
                    <small class="text-white-50">Administrateur</small>
                </div>
            </div>

            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') starts with 'admin_dashboard' %}active{% endif %}"
                       href="{{ path('admin_dashboard') }}">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') starts with 'admin_reservation' %}active{% endif %}"
                       href="{{ path('admin_reservation_index') }}">
                        <i class="bi bi-calendar-check"></i> R√©servations
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') starts with 'admin_service' %}active{% endif %}"
                       href="{{ path('admin_service_index') }}">
                        <i class="bi bi-heart-pulse"></i> Services
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.get('_route') starts with 'admin_user' %}active{% endif %}"
                       href="#">
                        <i class="bi bi-people"></i> Utilisateurs
                    </a>
                </li>

                <hr class="bg-white opacity-25 my-3">

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">
                        <i class="bi bi-house"></i> Retour au site
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">
                        <i class="bi bi-box-arrow-right"></i> D√©connexion
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <main class="col-md-10 ms-sm-auto px-md-4">
            <div class="py-4">
                <!-- Messages Flash -->
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}{% endblock %}
            </div>
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
