{% extends 'base.html.twig' %}

{% block title %}Nos Services - MediPlus{% endblock %}

{% block body %}
    <div class="mb-5">
        <h1 class="display-4 text-primary mb-2">üè• Nos Services M√©dicaux</h1>
        <p class="lead text-muted">D√©couvrez l'ensemble de nos prestations m√©dicales</p>
    </div>

    {% if services is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun service disponible pour le moment.
        </div>
    {% else %}
        <div class="row g-4">
            {% for service in services %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm hover-shadow">
                        <div class="card-body d-flex flex-column">
                            <div class="mb-3">
                                <h5 class="card-title text-primary">
                                    {{ service.nom }}
                                </h5>
                            </div>

                            <p class="card-text text-muted flex-grow-1">
                                {{ service.description }}
                            </p>

                            <div class="mt-3">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted">
                                    <i class="bi bi-clock"></i> {{ service.duree }} min
                                </span>
                                    <span class="badge bg-success fs-6">
                                    {{ service.prix }} TND
                                </span>
                                </div>

                                <div class="d-grid gap-2">
                                    <a href="{{ path('app_service_show', {id: service.id}) }}"
                                       class="btn btn-outline-primary">
                                        Voir d√©tails
                                    </a>

                                    {% if app.user %}
                                        <a href="{{ path('app_reservation_new', {service: service.id}) }}"
                                           class="btn btn-primary">
                                            üìÖ R√©server
                                        </a>
                                    {% else %}
                                        <a href="{{ path('app_login') }}"
                                           class="btn btn-primary">
                                            Connectez-vous pour r√©server
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <style>
        .hover-shadow {
            transition: all 0.3s ease;
        }
        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
        }
    </style>
{% endblock %}
