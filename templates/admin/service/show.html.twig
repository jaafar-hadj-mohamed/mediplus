{% extends 'admin/base.html.twig' %}

{% block title %}{{ service.nom }}{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('admin_service_index') }}">Services</a></li>
            <li class="breadcrumb-item active">{{ service.nom }}</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">{{ service.nom }}</h1>
        <span class="badge {% if service.actif %}bg-success{% else %}bg-secondary{% endif %} fs-6">
        {% if service.actif %}✅ Actif{% else %}❌ Inactif{% endif %}
    </span>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informations du service</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Description :</strong>
                        <p class="mt-2">{{ service.description }}</p>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-light rounded">
                                <div class="text-primary mb-2"><i class="bi bi-clock fs-1"></i></div>
                                <p class="text-muted mb-1">Durée</p>
                                <h4 class="mb-0">{{ service.duree }} min</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-light rounded">
                                <div class="text-success mb-2"><i class="bi bi-cash fs-1"></i></div>
                                <p class="text-muted mb-1">Prix</p>
                                <h4 class="mb-0">{{ service.prix }} TND</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-light rounded">
                                <div class="text-info mb-2"><i class="bi bi-calendar-check fs-1"></i></div>
                                <p class="text-muted mb-1">Réservations</p>
                                <h4 class="mb-0">{{ totalReservations }}</h4>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <p class="text-muted mb-0">
                            <small>
                                Créé le {{ service.createdAt|date('d/m/Y à H:i') }}
                                {% if service.updatedAt %}
                                    | Modifié le {{ service.updatedAt|date('d/m/Y à H:i') }}
                                {% endif %}
                            </small>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('admin_service_edit', {id: service.id}) }}"
                           class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>

                        <a href="{{ path('admin_service_toggle', {id: service.id}) }}"
                           class="btn btn-{% if service.actif %}warning{% else %}success{% endif %}">
                            <i class="bi bi-{% if service.actif %}pause{% else %}play{% endif %}-circle"></i>
                            {{ service.actif ? 'Désactiver' : 'Activer' }}
                        </a>

                        <hr>

                        <a href="{{ path('admin_service_index') }}"
                           class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Retour à la liste
                        </a>

                        {% if totalReservations == 0 %}
                            <form method="post" action="{{ path('admin_service_delete', {id: service.id}) }}"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce service ?')">
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-trash"></i> Supprimer
                                </button>
                            </form>
                        {% else %}
                            <button class="btn btn-outline-danger w-100" disabled
                                    title="Impossible de supprimer un service avec des réservations">
                                <i class="bi bi-trash"></i> Supprimer ({{ totalReservations }} réservations)
                            </button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
